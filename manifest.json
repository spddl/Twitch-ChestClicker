{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "Twitch ChestClicker",
  "description": "ChestClicker for Twitch",
  "version": "0.0.2",
  "icons": {
    "48": "logo48.png",
    "128": "logo128.png",
    "256": "logo256.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.twitch.tv/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "*://*.twitch.tv/*",
    "tabs"
  ],
  "browser_action": {
    "default_title": "Twitch ChestClicker",
    "default_icon": {
      "48": "logo48.png",
      "128": "logo128.png",
      "256": "logo256.png"
    }
  }
}
